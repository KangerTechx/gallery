{% extends 'base.admin.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="mt-5">Artist <a href="{{ path('addArtist') }}"><i class="bi bi-plus-square"></i></a></h2>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Avatar</th>
                <th scope="col">Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Bibliography</th>
                <th scope="col">Is Ban</th>
                <th scope="col"><i class="bi bi-pencil"></i></th>
            </tr>
            </thead>
            <tbody>

            {% for artist in artists %}
                <tr>
                    <th scope="row"><img src="{{ asset('img/artists/' ~ artist.image) }}" class="img-table" alt="{{ artist.lastname }}"></th>
                    <td>{{ artist.lastname ~ ' ' ~ artist.firstname }}</td>
                    <td>{{ artist.dnais|date('d-m-Y') }}</td>
                    <td>{{ artist.biblio }}</td>
                    <td>
                    {% if artist.isDisabled == true %}
                        <input type="checkbox" value="{{ artist.isDisabled }}" checked disabled>
                    {% else %}
                        <input type="checkbox" value="{{ artist.isDisabled }}" disabled>
                    {% endif %}
                    </td>
                    <td><a href="{{ path('editArtist', {id:artist.id}) }}"><i class="bi bi-pencil"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
