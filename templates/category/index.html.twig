{% extends 'base.admin.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="mt-5">Categories <a href="{{ path('addCategory') }}"><i class="bi bi-plus-square"></i></a></h2>

        <table class="table table-hover" id="adminTable">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col" class="no-sort"><i class="bi bi-pencil"></i></th>
            </tr>
            </thead>
            <tbody>
            {% for cat in category %}
                <tr>
                    <th scope="row">{{ cat.name }}</th>
                    <th scope="col"><a href="{{ path('editCategory', {id:cat.id}) }}"><i class="bi bi-pencil"></i></a></th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}