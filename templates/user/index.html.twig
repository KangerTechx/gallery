{% extends 'base.admin.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="mt-5">Users</h2>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Avatar</th>
                <th scope="col">Name</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Email</th>
                <th scope="col">Is Banned</th>
                <th scope="col"><i class="bi bi-pencil"></i></th>
            </tr>
            </thead>
            <tbody>

            {% for user in users %}
                <tr>
                    <th scope="row"><img src="{{ asset('img/users/' ~ user.image) }}" class="img-table" alt="{{ user.pseudo }}"></th>
                    <td>{{ user.firstname|capitalize ~ ' ' ~ user.lastname|capitalize }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.isDisabled == true %}
                            <input type="checkbox" value="{{ user.isDisabled }}" checked disabled>
                        {% else %}
                            <input type="checkbox" value="{{ user.isDisabled }}" disabled>
                        {% endif %}
                    </td>
                    <th scope="col"><a href="{{ path('editUserAdmin', {id:user.id}) }}"><i class="bi bi-pencil"></i></a></th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}