{% extends 'base.admin.html.twig' %}

{% block body %}
<div class="container">
    <h2 class="mt-5">Pictures <a href="{{ path('addPicture') }}"><i class="bi bi-plus-square"></i></a></h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">
                    <ul class="nav">
                        <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Category</a>
                            <ul class="dropdown-menu">
                                <a href="{{ path('admin') }}" class="dropdown-item">All Categories</a>
                                {% for cat in categories %}
                                    <a href="{{ path('cat', {id:cat.id}) }}" class="dropdown-item">{{ cat.name }}</a>
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                </th>
                <th scope="col">Size</th>
                <th scope="col">
                    <ul class="nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Artist</a>
                            <ul class="dropdown-menu">
                                <a href="{{ path('admin') }}" class="dropdown-item">All Artists</a>
                                {% for art in artists %}
                                    <a href="{{ path('art', {id:art.id}) }}" class="dropdown-item" href="#">{{ art.firstname ~' ' ~ art.lastname }}</a>
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                </th>
                <th scope="col">Date</th>
                <th scope="col">Published</th>
                <th scope="col"><i class="bi bi-pencil"></i></th>
                <th scope="col"><i class="bi bi-trash"></i></th>
            </tr>
        </thead>
        <tbody>

            {% for pic in pictures %}
            <tr>
                <th scope="row"><img src="{{ asset('img/pictures/' ~ pic.image) }}" class="img-table" alt="{{ pic.title }}"></th>
                <td>{{ pic.title }}</td>
                <td>{{ pic.category.name }}</td>
                <td>{{ pic.width ~ ' x ' ~ pic.height }}</td>
                <td>{{ pic.artist.firstname ~ ' ' ~ pic.artist.lastname }}</td>
                <td>{{ pic.createdAt|date('d-m-Y') }}</td>
                <td>
                    {% if pic.isPulished == true %}
                        <input type="checkbox" value="{{ pic.isPulished }}" checked disabled>
                    {% else %}
                        <input type="checkbox" value="{{ pic.isPulished }}" disabled>
                    {% endif %}
                </td>
                <th scope="col"><a href="{{ path('editPicture', {id:pic.id}) }}"><i class="bi bi-pencil"></i></a></th>
                <th scope="col"><a href="{{ path('delPicture', {id:pic.id}) }}"><i class="bi bi-trash"></i></a></th>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}