{% extends 'base.html.twig' %}

{% block title %}Artist-Detail{% endblock %}

{% block body %}
    {{ parent() }}

    <section class="lastArtist">
        <div class="container">
            <h2 class="display-4 justify-content-center justify-content-md-start titleCustom">Artist Detail</h2>

            <div class="d-flex flex-wrap justify-content-center justify-content-md-start">

                <div>
                    <img src="{{ asset('img/artists/'~ artist.image) }}" alt="{{ artist.lastname }}" class="me-5 img-artist">
                </div>
                <div>
                    <h4>{{ artist.firstname|capitalize ~ ' ' ~ artist.lastname|capitalize }}</h4>
                    <nav>
                        <div class="nav nav-tabs " id="nav-tab" role="tablist">
                            <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Infos</button>
                            <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Bibliography</button>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                            <p class="mt-5"><img src="{{ asset('img/artists/cake.svg') }}" class="me-1 iconArt" alt="cake"> {{ artist.dnais|date('d-m-Y') }}</p>
                            <p><i class="bi bi-envelope me-1"></i> {{ artist.firstname|lower~'.'~artist.lastname|lower~'@gmail.com' }}</p>
                            <p><i class="bi bi-telephone me-1"></i>+32 (0)475 452 845</p>
                        </div>
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                            <p class="mt-3">{{ artist.biblio }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}